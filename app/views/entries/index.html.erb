<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <div class="card-header">
          <p class="card-header-title"><%= entry.meal_type %></p>
        </div>
        <div class="card-content">
          <div class="content">
            <div class="has-text-weight-bold "><span><%= entry.calories %></span> Calories</div>
            <div class="has-text-weight-bold "><span><%= entry.proteins %></span> gram of protein</div>
            <div class="has-text-weight-bold "><span><%= entry.carbohydrates %></span> grans if carbohydrates</div>
            <div class="has-text-weight-bold "><span><%= entry.fats %></span> gram of fats</div>
            <p class="italic"> Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', entry, class: "card-footer-item" %>
          <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="columns is-centered mt-6">
  <%= link_to "View all entries", archives_index_path, class: "button is-link is-outlined is-centered" %>
</div>